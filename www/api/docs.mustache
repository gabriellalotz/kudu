<link rel="stylesheet" type="text/css" href="{{base_url}}/swagger/swagger-ui.css" />
<link rel="stylesheet" type="text/css" href="{{base_url}}/swagger/kudu-custom.css" />

{{#spnego_enabled}}
<div class="alert alert-warning">
  <h3>Interactive Swagger UI Not Available</h3>
  <p>SPNEGO authentication is enabled, which prevents Swagger UI from working properly with static resources.</p>
  <h4>Alternatives:</h4>
  <ul>
    <li><strong>Download OpenAPI spec:</strong> <a href="{{base_url}}/swagger/kudu-api.json">kudu-api.json</a></li>
    <li><strong>Use external tools:</strong> Postman, Insomnia, or other API clients</li>
    <li><strong>Command line:</strong> Use <code>curl --negotiate -u :</code> for SPNEGO authentication</li>
  </ul>
</div>
{{/spnego_enabled}}

{{^spnego_enabled}}
<div id="swagger-ui" data-base-url="{{base_url}}">
  <p>Loading Swagger UI...</p>
</div>

<script src="{{base_url}}/swagger/swagger-ui-bundle.js" charset="UTF-8"></script>
<script src="{{base_url}}/swagger/kudu-swagger-init.js" charset="UTF-8"></script>
{{/spnego_enabled}}
